@using WebAppEntities.CustomEntities;
@model IEnumerable<CollectiveData>
@{
    var PageNo = ViewBag.PageNumber;
    var totalPages = ViewBag.TotalPages;
}
<div class="container-fluid">
    <h1 style="text-align:center">Student Data</h1>
    <hr />
    <div class="row container">
        @using (@Html.BeginForm("GetCollectiveData", "School", FormMethod.Get))
        {
            <div class="form-inline row">
                <div class="form-group">
                    <label class="lead"><b>Search: </b></label>
                </div>
                <div class="col-md-6">
                    <input type="text" name="search" class="form-control" style="max-width:100%" placeholder="Enter your text here" />
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </div>
            </div>
        }
    </div>
    <hr />


    <div class="row">
        <div class="col=md=12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentFname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentLname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentEmail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TeacherName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TeacherEmail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeptName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentFname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentLname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TeacherName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TeacherEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeptName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @{
                
                <ul class="pagination d">
                    @if (PageNo == 1)
                        {
                            <li class="disabled p-2">
                                @Html.ActionLink("Previous", "GetCollectiveData", new { search = ViewBag.Search, PageNumber = PageNo })
                            </li>
                        }
                        else
                        {
                            <li class="p-2">
                                @Html.ActionLink("Previous", "GetCollectiveData", new { search = ViewBag.Search, PageNumber = PageNo - 1 })
                            </li>
                        }
                    @for (int i = 1; i < totalPages; i++)
                    {
                        if (i == PageNo)
                        {
                            <li class="active p-2">
                                @Html.ActionLink(i.ToString(), "GetCollectiveData", new { search = ViewBag.Search, PageNumber = i })
                            </li>
                        }
                        else
                        {
                            <li class="p-2">
                                @Html.ActionLink(i.ToString(), "GetCollectiveData", new { search = ViewBag.Search, PageNumber = i })
                            </li>
                        }
                    }
                   @if (PageNo == totalPages)
                        {
                            <li class="disabled p-2">
                                @Html.ActionLink("Next", "GetCollectiveData", new { PageNumber = PageNo })
                            </li>
                        }
                        else
                        {
                            <li class="p-2">
                                @Html.ActionLink("Next", "GetCollectiveData", new { search = ViewBag.Search, PageNumber = PageNo + 1 })
                            </li>
                        }
                    
                </ul>
            }
        </div>
    </div>
</div>


